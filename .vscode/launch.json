{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "attach",
                "name": "Attach to Remote Root",
                "address": "localhost",
                "port": 5858,
                "localRoot": "${workspaceRoot}",
                "remoteRoot": "/usr/src/app/"
            },
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "program": "${workspaceRoot}/server"
            }
        ]
    }